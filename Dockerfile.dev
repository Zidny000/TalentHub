FROM node:20-alpine

# Install dependencies needed for development and native modules
RUN apk add --no-cache bash curl postgresql-client python3 make g++ netcat-openbsd redis

# Create app directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Rebuild bcrypt specifically for Alpine
RUN npm rebuild bcrypt --build-from-source

# Copy Prisma schema
COPY prisma ./prisma/

# Generate Prisma client
RUN npx prisma generate

# Expose port
EXPOSE 3000

# Start the application using the dev script
CMD ["npm", "start"]
