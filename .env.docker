# Application
PORT=3000
NODE_ENV=production

# Database (using Docker service name)
DATABASE_URL="postgresql://postgres:postgres@db:5432/talenthub?schema=public"

# JWT
JWT_SECRET="change_this_to_a_secure_random_string"
JWT_REFRESH_SECRET="change_this_to_another_secure_random_string"

# Token Expiry (in seconds)
ACCESS_TOKEN_EXPIRY=3600  # 1 hour
REFRESH_TOKEN_EXPIRY=2592000  # 30 days

# Email
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=user@example.com
EMAIL_PASS=password
EMAIL_FROM=noreply@talenthub.com
EMAIL_SERVICE=service_provider_name

# Stripe Configuration (replace with your own values)
STRIPE_SECRET_KEY="sk_test_your_test_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Redis
REDIS_URL="redis://redis:6379"